<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".ImageActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/passwordimage"
        android:visibility="visible"
        app:srcCompat="@mipmap/login_r2" />

    <ImageView
        android:id="@+id/imageview_counter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/test"
        android:visibility="invisible"
        app:srcCompat="@mipmap/no_2a" />

    <ImageView
        android:id="@+id/imageview_counter3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/test"
        android:visibility="invisible"
        app:srcCompat="@mipmap/no_3a" />

    <ImageView
        android:id="@+id/imageview_counter4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/test"
        android:visibility="invisible"
        app:srcCompat="@mipmap/no_4a" />

    <ImageView
        android:id="@+id/imageview_counter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/test"
        android:visibility="invisible"
        app:srcCompat="@mipmap/no_1a" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="2pt"
        app:srcCompat="@android:drawable/ic_partial_secure" />

</FrameLayout>